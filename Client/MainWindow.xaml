        <TextBox x:Name="Answer2" Visibility="Hidden" HorizontalAlignment="Left" Height="23" Margin="38,250,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="313"/>
        <Label x:Name="labela" Content="New user?" HorizontalAlignment="Left" Margin="38,302,0,0" VerticalAlignment="Top" Width="118"/>
